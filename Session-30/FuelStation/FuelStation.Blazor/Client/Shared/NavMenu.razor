<div class="d-flex justify-content-center" style="margin-top: 10px;">
    <div class="btn-group" role="group" aria-label="Basic example">
        <button type="button" class="btn btn-light" @onclick="ToggleManager">Manager</button>
        <button type="button" class="btn btn-light" @onclick="ToggleCashier">Cashier</button>
        <button type="button" class="btn btn-light" @onclick="ToggleStaff">Staff</button>        
    </div>
</div>

@if (showMain == 1) {
    <Manager />
}
else if (showMain == 2) {
    <StaffMenu />
}
else if (showMain == 3) {
    <CashierMenu />
}


@code {
    int showMain = 0;
    void ToggleManager() {
        showMain = 1;
    }
    void ToggleCashier() {
        showMain = 2;
    }
    void ToggleStaff() {
        showMain = 3;
    }
    

}